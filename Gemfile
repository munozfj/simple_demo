source 'https://rubygems.org'

ruby '1.9.3'
gem  'rails', '3.2.8'
gem  'jquery-rails'

# Ambiente de desarrollo y test
group :development do
  gem 'sqlite3'
end

# Ambiente productivo
group :production do
  gem 'pg'
  gem 'thin'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '3.2.5'
  gem 'coffee-rails', '3.2.2'
  gem 'uglifier', '1.2.3'
end




